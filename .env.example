# =============================================================================
# CreatorPulse - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Environment (development, production)
ENVIRONMENT=development
DEBUG=true

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32

# =============================================================================
# SUPABASE
# =============================================================================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Database URL for migrations (optional - can be constructed from SUPABASE_URL + password)
# Format: postgresql://postgres:PASSWORD@db.PROJECT_REF.supabase.co:5432/postgres
# DATABASE_URL=postgresql://postgres:your-db-password@db.xxx.supabase.co:5432/postgres
# Or just provide the password:
# SUPABASE_DB_PASSWORD=your-database-password

# =============================================================================
# AI / NEWSLETTER GENERATION
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview

# OpenRouter (alternative to OpenAI)
USE_OPENROUTER=false
OPENROUTER_API_KEY=sk-...
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# =============================================================================
# EMAIL DELIVERY
# =============================================================================

# SMTP (Gmail, Outlook, etc.)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com

# SendGrid (alternative to SMTP)
USE_SENDGRID=false
SENDGRID_API_KEY=SG.

# =============================================================================
# CONTENT SCRAPERS (API Keys)
# =============================================================================

# X (Twitter)
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=
X_BEARER_TOKEN=

# YouTube
YOUTUBE_API_KEY=

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend URL (set automatically in Railway, use default for local)
# BACKEND_URL=http://localhost:8000

# CORS Allowed Origins (comma-separated)
# ALLOWED_ORIGINS=http://localhost:8501,http://localhost:3000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# RAILWAY DEPLOYMENT (Auto-detected, don't set manually)
# =============================================================================

# RAILWAY_PUBLIC_DOMAIN=yourapp-production.up.railway.app
# RAILWAY_ENVIRONMENT=production
